generator client {
  provider = "prisma-client-js"
// output   = "../generated/prisma"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id @default(uuid())
  clerkId String @unique
  firstName String
  lastName String
  email String
  profilePicture String?
  createdAt DateTime @default(now())
  models Model[]
  packs Packs[]
  outputImages OutputImages[]
}

enum ModelTypeEnum{
Man
Woman
Others
}
enum EthinictyEnum{
  White
  Black
  AsianAmerican
  EastAsian
  SouthEastAsian
  SouthAsianMiddleEastern
  Pacific
  Hispanic
}
enum EyeColorEnum{
  Brown
  Blue
  Hazel
  Gray
}
model Model{
id String @id @default(uuid())
name String
gender ModelTypeEnum
age Int
bald Boolean
ethinicity EthinictyEnum
userId String
eyecolor EyeColorEnum
trainingImagesUrl String[]
outputImages OutputImages[]
Packs Packs[]
imageUrl String[]
createdAt DateTime @default(now())
  jobId String?
updatedAt DateTime @updatedAt
status ModelTrainingEnum @default(TRAINING)
user User @relation(fields:[userId], references:[id])
}
enum ModelTrainingEnum{
  TRAINING
  COMPLETED
  FAILED
}
enum OutputImageStatusEnum{
  PENDING
  COMPLETED
  FAILED
}
model OutputImages{
  id String @id @default(uuid())
  imageUrl String[]
  modelId String
  userId String
  user User @relation(fields:[userId],references: [id])
model Model @relation(fields:[modelId],references: [id])
jobid String
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
prompt String
status OutputImageStatusEnum @default(PENDING)
}
model Packs{
  id String @id @default(uuid())
userId String
jobId String
modelId String
user User @relation(fields:[userId],references:[id])
model Model @relation(fields:[modelId],references:[id])
packType String
status OutputImageStatusEnum @default(PENDING)
packImages PackImages[]
totalImages Int
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}

model PackImages{
  id String @id @default(uuid())
  packId String
  jobId String?
  prompts String
  status OutputImageStatusEnum @default(PENDING)
  packs Packs@relation(fields:[packId],references:[id]) 
  falRequestId String
  imageUrl String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  
}